<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE log4c SYSTEM "">

<log4c version="1.2.4">

	<config>
		<bufsize>0</bufsize>
		<debug level="2"/>
		<nocleanup>0</nocleanup>
		<reread>1</reread>
	</config>

	<rollingpolicy name="nvipfix_rollingpolicy" type="sizewin" maxsize="10485760" maxnum="9" />
	<rollingpolicy name="nvipfix_error_rollingpolicy" type="sizewin" maxsize="1048576" maxnum="9" />

	<appender name="nvipfix_rollingfileappender" type="rollingfile" logdir="/var/nvOS/log" prefix="nvipfix.log" layout="dated_local" rollingpolicy="nvipfix_rollingpolicy" />
	<appender name="nvipfix_error_rollingfileappender" type="rollingfile" logdir="/var/nvOS/log" prefix="nvipfix.error.log" layout="dated_local" rollingpolicy="nvipfix_error_rollingpolicy" />
	
	<appender name="stdout" type="stream" layout="basic"/>
	<appender name="stderr" type="stream" layout="dated_local"/>
	<appender name="syslog" type="syslog" layout="basic"/>

	<layout name="basic" type="basic"/>
	<layout name="dated_local" type="dated_local"/>

	<category name="nvipfix.log" priority="trace" appender="stdout" />
	<category name="nvipfix.log.app" priority="trace" appender="nvipfix_rollingfileappender" />
	<category name="nvipfix.log.app.error" priority="error" appender="nvipfix_error_rollingfileappender" />
</log4c>
